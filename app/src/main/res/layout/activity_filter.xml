<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原图" />

            <ImageView
                android:id="@+id/iv_source"
                android:layout_width="300dp"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方框滤波(没有归一化)" />

            <ImageView
                android:id="@+id/iv_box"
                android:layout_width="300dp"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="均值滤波" />

            <ImageView
                android:id="@+id/iv_blur"
                android:layout_width="300dp"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_gaussian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高斯滤波" />

            <ImageView
                android:id="@+id/iv_gaussian"
                android:layout_width="300dp"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中值滤波" />

            <ImageView
                android:id="@+id/iv_mid"
                android:layout_width="300dp"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_bil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双边滤波" />

            <ImageView
                android:id="@+id/iv_bil"
                android:layout_width="300dp"
                android:layout_height="200dp" />


            <TextView
                android:id="@+id/tv_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大值滤波(膨胀)" />

            <ImageView
                android:id="@+id/iv_max"
                android:layout_width="300dp"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最小值滤波(腐蚀)" />

            <ImageView
                android:id="@+id/iv_min"
                android:layout_width="300dp"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_fudiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浮雕" />

            <ImageView
                android:id="@+id/iv_fudiao"
                android:layout_width="300dp"
                android:layout_height="200dp" />

        </LinearLayout>
    </ScrollView>
</layout>
